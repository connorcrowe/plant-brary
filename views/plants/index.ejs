<h2>Search Plants</h2>
<form action="/plants" method="GET">
    <div>
        <label>Name</label>
        <input type="text" name="name" value="<%= searchOptions.name %>">
    </div>
    <div>
        <label>Added After</label>
        <input type="date" name="addedAfter" value="<%= searchOptions.addedAfter %>">
    </div>
    <button type="submit">Search</button>
</form>
<br>
<div>
    <% plants.forEach(plant => { %>
        <a href="/plants/<%= plant.id %>">
        <img height="150" width="100" src="<%= plant.imagePath %>">
        </a>
    <% }); %>
</div>
