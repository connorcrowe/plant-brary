<h2><%= author.name %></h2>
<a href="/authors/<%= author.id %>/edit">Edit</a>
<%- include('../partials/deleteForm', { 
     url: `/authors/${author.id}`
}); %>
<% if (plantsByAuthor.length > 0) {%>
    <h2>Plants by Author</h2>
    <% plantsByAuthor.forEach(plant => { %>
        <img height="150" width="100" src="<%= plant.imagePath %>">
    <%  }) %>
<% } %> 